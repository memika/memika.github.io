---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Design Lab',
  description = 'Design exploration for Mika Rebensburg personal site.'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0f172a" />
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body>
    <slot />
  </body>
</html>
